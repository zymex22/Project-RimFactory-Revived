        <xpath>/Defs/ThingDef[defName="WDCoal"]</xpath>
        <match Class="PatchOperationAdd">
            <order>Append</order>
            <xpath>/Defs/ThingDef/comps/li[@Class = "CompProperties_Refuelable" and fuelFilter/thingDefs/li[text() = "WoodLog"]]/fuelFilter/thingDefs</xpath>
