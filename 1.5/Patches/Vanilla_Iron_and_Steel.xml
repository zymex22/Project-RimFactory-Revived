<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Vanilla Iron and Steel -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Iron and Steel</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_FurnaceI"]/recipes</xpath>
					<value>
						<li>NECForgeSteel</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_FurnaceII"]/recipes</xpath>
					<value>
						<li>NECForgeSteelBulk</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_FurnaceIII"]/recipes</xpath>
					<value>
						<li>NECForgeSteelBulk</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

	<!-- Simple Chains: Steel -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Simple Chains: Steel</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_FurnaceI"]/recipes</xpath>
					<value>
						<li>Owl_RefineSteel</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_FurnaceII"]/recipes</xpath>
					<value>
						<li>Owl_RefineSteel</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="PRF_FurnaceIII"]/recipes</xpath>
					<value>
						<li>Owl_RefineSteel</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>