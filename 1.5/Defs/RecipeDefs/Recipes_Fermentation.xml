<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!--================ Beer 6-pack =====================-->
  <RecipeDef>
    <defName>BrewBeer_sixpack</defName>
    <label>brew beer x10</label>
    <description>Brew beer in a batch lot of 10 units at once.</description>
    <jobString>Brewing beer.</jobString>
    <effectWorking>Cook</effectWorking>
    <workSkill>Cooking</workSkill>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <workAmount>180000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Wort</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Wort</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Beer>10</Beer>
    </products>
  </RecipeDef>

