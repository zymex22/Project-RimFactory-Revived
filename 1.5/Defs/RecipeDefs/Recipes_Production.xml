<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef>
    <defName>PRF_MetalFromSlagBulk</defName>
    <label>smelt metal from slag in bulk</label>
    <description>Use heat and strong electromagnets to extract useful metal from slag chunks in bulk.</description>
    <jobString>Smelting metal from slag.</jobString>
    <workAmount>1000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <recipeUsers>
      <li>PRF_FurnaceI</li>
      <li>PRF_FurnaceII</li>
      <li>PRF_FurnaceIII</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkSlagSteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <products>
      <Steel>60</Steel>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkSlagSteel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
  </RecipeDef>

