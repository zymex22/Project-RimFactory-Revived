<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Tier 1 -->
  <ResearchProjectDef>
    <defName>SelfCooking</defName>
    <tab>Automation</tab>
    <techLevel>Industrial</techLevel>
    <baseCost>2000</baseCost>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <prerequisites>
      <li>PRFEulersIdentity</li>
    </prerequisites>
    <label>Self-cooking</label>
    <researchViewX>1</researchViewX>
    <researchViewY>2</researchViewY>
    <description>Make buildings that can cook meals themselves. Like your dedicated cook, but won't have mental breaks for silly reasons.</description>
  </ResearchProjectDef>


  <ResearchProjectDef>
    <defName>MagneticTape</defName>
    <tab>Automation</tab>
    <techLevel>Industrial</techLevel>
    <baseCost>1000</baseCost>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <prerequisites>
      <li>AutomationBasics</li>
    </prerequisites>
    <label>Magnetic tape</label>
    <researchViewX>2</researchViewX>
    <researchViewY>2</researchViewY>
    <description>Learn how to make and use old-school magnetic tape to store instructions. Make data disks at the machining table.</description>
  </ResearchProjectDef>


  <ResearchProjectDef>
    <defName>UniversalAutocrafting</defName>
    <label>universal auto-crafting</label>
    <description>Make buildings that can craft recipes given to them via a recipe database. Like your dedicated crafter, but won't have mental breaks for silly reasons.</description>
    <tab>Automation</tab>
    <techLevel>Industrial</techLevel>
    <baseCost>3000</baseCost>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>
    <prerequisites>
      <li>MagneticTape</li>
    </prerequisites>
    <researchViewX>3</researchViewX>
    <researchViewY>2</researchViewY>
  </ResearchProjectDef>

  <!-- Tier 2 -->
  <ResearchProjectDef>
    <defName>SelfCorrectingAssemblers</defName>
    <label>self-correcting assemblers</label>
    <description>Learn how to make a new type of assembler that slowly improves its crafting speed.</description>
    <techLevel>Spacer</techLevel>
    <baseCost>2250</baseCost>
    <tab>Automation</tab>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <prerequisites>
      <li>PRFMachineLearning</li>
      <li>UniversalAutocrafting</li>
    </prerequisites>
    <researchViewX>4</researchViewX>
    <researchViewY>2</researchViewY>
  </ResearchProjectDef>
</Defs>