<Defs>

  <DesignatorDropdownGroupDef>
    <defName>PRF_FloorIconGroup</defName>
  </DesignatorDropdownGroupDef>

  <!-- ================= Fix for docworld ================= -->
  <ThingDef Name="PRF_FloorSign" ParentName="PRF_BuildingBase" Abstract="True">
    <designationCategory>Industrial</designationCategory>
  </ThingDef>


  <!-- ================= Base ================= -->
  <ThingDef Name="PRF_FloorIconBase" ParentName="PRF_FloorSign" Abstract="True">
    <description>A weak fluorescent sign that can be placed on floors or top of machines or other buildings.</description>
    <designatorDropdown>PRF_FloorIconGroup</designatorDropdown>
    <rotatable>true</rotatable>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <clearBuildingArea>false</clearBuildingArea>
    <passability>Standable</passability>
    <canOverlapZones>true</canOverlapZones>
    <costList>
      <Steel>2</Steel>
      <Silver>1</Silver>
    </costList>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>110</WorkToBuild>
      <MarketValue>15</MarketValue>
      <Flammability>1.0</Flammability>
      <Beauty>2</Beauty>
    </statBases>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(113,141,117,0)</glowColor>
      </li>
    </comps>
    <building>
      <isEdifice>false</isEdifice>
    </building>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <size>(1,1)</size>
    <researchPrerequisites>      <!-- Optional. The player will not be able to build the floor or terrain until completing one or more research projects -->
      <li>Machining</li>
    </researchPrerequisites>
    <thingCategories Inherit="false">
    </thingCategories>
  </ThingDef>


